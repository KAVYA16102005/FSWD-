import React from "react";

export default function EventRegistration() {
  const registerEvent = () => {
    const name = prompt("Enter your name:");
    if (!name) {
      alert("Registration cancelled!");
      return;
    }

    const email = prompt("Enter your email address:");
    const eventName = prompt("Enter event name:");
    const date = prompt("Enter event date (DD/MM/YYYY):");

    if (!email || !eventName || !date) {
      alert("All fields are required!");
      return;
    }

    const confirmRegistration = confirm(
      `Please confirm your registration:\n\n` +
        `Name: ${name}\n` +
        `Email: ${email}\n` +
        `Event: ${eventName}\n` +
        `Date: ${date}\n\n` +
        `Do you want to confirm your registration?`
    );

    if (confirmRegistration) {
      alert(
        `‚úÖ Registration Successful!\n\n` +
          `Participant: ${name}\n` +
          `Event: ${eventName}\n` +
          `Date: ${date}\n\n` +
          `Thank you for registering!`
      );
    } else {
      alert("‚ùå Registration cancelled by user.");
    }
  };

  return (
    <div className="min-h-screen flex items-center justify-center bg-gray-100">
      <div className="bg-white p-6 rounded-xl shadow-md text-center">
        <h1 className="text-2xl font-bold mb-4">üìÖ Event Registration</h1>
        <p className="mb-4 text-gray-600">
          Click the button below to register for an event using dialog boxes.
        </p>

        <button
          onClick={registerEvent}
          className="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700"
        >
          Register for Event
        </button>
      </div>
    </div>
  );
}
